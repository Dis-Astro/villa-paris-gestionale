generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modello per gli eventi
model Evento {
  id               Int              @id @default(autoincrement())
  titolo           String
  tipo             String
  dataConfermata   DateTime?
  fascia           String
  stato            String
  personePreviste  Int?
  note             String?
  menu             Json?
  struttura        Json?
  dateProposte     Json?
  disposizioneSala Json?
  
  // Campi report aziendale
  luogo            String?
  prezzo           Float?
  menuPasto        String?
  menuBuffet       String?
  sposa            String?
  sposo            String?
  
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  clienti          EventoCliente[]
  versioni         VersioneEvento[]
  overrideLogs     OverrideLog[]
}

// Versione evento - snapshot anti-contestazione
model VersioneEvento {
  id            String   @id @default(uuid())
  eventoId      Int
  evento        Evento   @relation(fields: [eventoId], references: [id], onDelete: Cascade)
  
  numero        Int
  tipo          String
  watermark     String
  
  snapshot      Json
  hash          String?
  
  autore        String?
  commento      String?
  
  createdAt     DateTime @default(now())
  
  @@index([eventoId])
}

// Log override blocco -10 giorni
model OverrideLog {
  id            String   @id @default(uuid())
  eventoId      Int
  evento        Evento   @relation(fields: [eventoId], references: [id], onDelete: Cascade)
  
  motivo        String
  autore        String?
  campoModificato String?
  
  createdAt     DateTime @default(now())
  
  @@index([eventoId])
}

// Modello per i menu base
model MenuBase {
  id        Int      @id @default(autoincrement())
  nome      String
  struttura Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modello per i clienti
model Cliente {
  id        Int              @id @default(autoincrement())
  nome      String
  cognome   String?
  email     String?
  telefono  String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  eventi    EventoCliente[]
}

// Relazione N:N tra Evento e Cliente
model EventoCliente {
  id         Int     @id @default(autoincrement())
  evento     Evento  @relation(fields: [eventoId], references: [id], onDelete: Cascade)
  eventoId   Int
  cliente    Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  clienteId  Int
}
