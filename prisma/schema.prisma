generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modello per gli eventi
model Evento {
  id               Int              @id @default(autoincrement())
  titolo           String
  tipo             String
  dataConfermata   DateTime?
  fascia           String
  stato            String
  personePreviste  Int?
  note             String?
  menu             Json?
  struttura        Json?
  dateProposte     Json?
  disposizioneSala Json?
  
  // Campi report aziendale
  luogo            String?          // Luogo evento (default: Villa Paris)
  prezzo           Float?           // Prezzo per persona
  menuPasto        String?          // Descrizione menu pasto
  menuBuffet       String?          // Descrizione menu buffet
  sposa            String?          // Nome sposa/festeggiato
  sposo            String?          // Nome sposo (se matrimonio)
  
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  clienti          EventoCliente[]
  versioni         VersioneEvento[]
  overrideLogs     OverrideLog[]
}

// Versione evento - snapshot anti-contestazione
model VersioneEvento {
  id            String   @id @default(uuid())
  eventoId      Int
  evento        Evento   @relation(fields: [eventoId], references: [id])
  
  numero        Int      // Revisione progressiva per evento (1, 2, 3...)
  tipo          String   // bozza | contratto | definitivo | AUTO_PRE_STAMPA
  watermark     String   // BOZZA | CONTRATTO | DEFINITIVO
  
  snapshot      Json     // Snapshot completo evento
  hash          String?  // Hash per verifica integrità
  
  autore        String?  // Utente che ha creato (se disponibile)
  commento      String?
  
  createdAt     DateTime @default(now())
  
  @@index([eventoId])
}

// Log override blocco -10 giorni
model OverrideLog {
  id            String   @id @default(uuid())
  eventoId      Int
  evento        Evento   @relation(fields: [eventoId], references: [id])
  
  motivo        String   // Motivo obbligatorio
  autore        String?  // Chi ha fatto override
  campoModificato String? // Quale campo è stato modificato
  
  createdAt     DateTime @default(now())
  
  @@index([eventoId])
}

// Modello per i menù base
model MenuBase {
  id        Int      @id @default(autoincrement())
  nome      String
  struttura Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modello per i clienti
model Cliente {
  id        Int              @id @default(autoincrement())
  nome      String
  cognome   String?
  email     String?
  telefono  String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  eventi    EventoCliente[]
}

// Relazione N:N tra Evento e Cliente
model EventoCliente {
  id         Int     @id @default(autoincrement())
  evento     Evento  @relation(fields: [eventoId], references: [id])
  eventoId   Int
  cliente    Cliente @relation(fields: [clienteId], references: [id])
  clienteId  Int
}
